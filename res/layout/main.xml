<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/layout">
	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/station" android:id="@+id/station_image"></ImageView>
		<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:layout_marginLeft="4sp">		
			<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/headliner" android:layout_toRight="@id/station_image" android:text="Headliner" android:textSize="17sp" android:textStyle="bold" android:layout_gravity="center_vertical"></TextView>
			<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/venue" android:layout_toRight="@id/station_image" android:text="Venue" android:layout_below="@id/headliner"></TextView>
		</LinearLayout>
	</LinearLayout>
	
	
	
	
	
	
	<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="#abababab" android:layout_marginLeft="6sp" android:padding="1px" android:layout_marginRight="6sp" android:layout_marginTop="6sp" android:layout_weight="1" android:layout_marginBottom="6sp"><TextView android:text="Station Name" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textAlign="center" android:textColor="#000" android:layout_marginTop="1sp" android:layout_marginBottom="1sp" android:textStyle="bold"></TextView><LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:padding="1sp" android:background="#000" android:layout_weight="1"><ImageView android:id="@+id/cover_art" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1"></ImageView><TextView android:id="@+id/artist" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Artist" android:textAlign="center"></TextView><TextView android:id="@+id/title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Title" android:textAlign="center" android:layout_marginBottom="2sp" android:textStyle="bold"></TextView></LinearLayout>
		<LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:paddingTop="4sp">
		<Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Love"></Button><Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Ban"></Button><Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Stop" android:id="@+id/stop"></Button><Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Skip"></Button></LinearLayout></LinearLayout></LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:background="#000">

	<ViewFlipper android:id="@+id/playback_detail_flipper"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		
		<!-- Playback view -->
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
	        xmlns:lfm="http://schemas.android.com/apk/res/fm.last.android">

	        <fm.last.android.RemoteImageView android:id="@+id/album"
	            lfm:unknownImage="@+drawable/albumart_mp_unknown"
	            android:background="@drawable/albumart_mp_unknown"
	            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
	            android:layout_height="200dip" android:layout_width="200dip" android:layout_margin="8dip"/>
	            
	        <ImageButton android:id="@+id/ontour" android:src="@drawable/on_tour" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:background="@null" android:visibility="gone"/>
		
			<LinearLayout android:id="@+id/playback_controls" android:orientation="horizontal"
			    android:layout_gravity="bottom"
			    android:layout_marginTop="1px"
			    android:layout_width="fill_parent" android:gravity="center" android:layout_alignParentBottom="true" android:layout_height="62px">
			
			    <ImageButton android:id="@+id/love" style="@+style/LastFMButton.Love"/>
			    <ImageButton android:id="@+id/ban" style="@+style/LastFMButton.Ban"/>
			    <ImageButton android:id="@+id/stop" style="@+style/LastFMButton.Stop"/>
			    <ImageButton android:id="@+id/skip" style="@+style/LastFMButton.Skip"/>
		
			</LinearLayout>
		
			<TableLayout android:id="@+id/track_metadata"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:layout_centerHorizontal="true" 
				android:layout_toRightOf="@id/album" android:layout_centerVertical="true">
				
				<TableRow
					android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:layout_gravity="center"
					android:gravity="center">
					
					<TextView android:id="@+id/track_title"
						style="@style/playback_info"
						android:layout_height="wrap_content"
						android:gravity="center" android:layout_gravity="left" android:textStyle="bold" android:textSize="8pt" android:maxWidth="240dip" android:text="Title"/>
				</TableRow>
				
				<TableRow 
					android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:gravity="center" android:layout_marginBottom="32dip">
					
					<TextView android:id="@+id/track_artist"
						style="@style/playback_info"
						android:layout_height="wrap_content"
						android:layout_width="fill_parent"
						android:gravity="center" android:text="Artist" android:layout_gravity="left" android:textStyle="bold" android:textSize="8pt" android:maxWidth="240dip"/>
				</TableRow>
				
				<TableRow 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center" android:layout_marginBottom="32dip">
					
					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content">
						
						<TextView android:id="@+id/currenttime"
							style="@style/playback_time"
							android:layout_height="wrap_content"
							android:text="00:00" android:gravity="left" android:textStyle="bold" android:layout_gravity="bottom" android:layout_width="wrap_content"/>
							
						<ProgressBar android:id="@android:id/progress"
							android:background="#000"
							android:layout_height="8px"
							android:paddingLeft="5px"
							android:paddingRight="5px"
							android:indeterminateOnly="false"
							android:progressDrawable="@+drawable/progress_horizontal"
							android:layout_marginLeft="8dip"
							android:layout_marginRight="8dip"
							android:layout_gravity="center_vertical" android:layout_width="160dip"/>
			
						<TextView android:id="@+id/totaltime"
							style="@style/playback_time"
							android:layout_gravity="bottom"
							android:layout_height="wrap_content"
							android:text="00:00" android:textStyle="bold" android:gravity="right" android:layout_width="wrap_content"/>
			
					</LinearLayout>
				</TableRow>
			</TableLayout>
		</RelativeLayout>
		
		<!--  metadata view -->
		<LinearLayout android:orientation="vertical" 
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			<fm.last.android.widget.TabBar
				android:id="@+id/TabBar" android:layout_width="fill_parent"
				android:layout_marginTop="6dip"
				android:layout_height="60dip"/>
			<LinearLayout android:background="@drawable/tab_bar_rest" android:layout_width="fill_parent"
				android:layout_height="5dip" android:layout_marginBottom="1dip"/>
			<ViewFlipper android:id="@+id/ViewFlipper"
				android:layout_width="fill_parent" android:layout_height="fill_parent">
		
				<!-- Bio tab -->
				<WebView android:id="@+id/webview" android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:fadingEdge="none">
				</WebView>
				
				<!-- Similar tab -->
				<ListView android:id="@+id/similar_list_view"
					android:background="#fff"
					android:divider="#d9d7d7"
					android:layout_width="fill_parent" android:layout_height="fill_parent"></ListView>
					
				<!-- Top Tags tab -->
				<ListView android:id="@+id/tags_list_view"
					android:background="#fff"
					android:divider="#d9d7d7"
					android:layout_width="fill_parent" android:layout_height="fill_parent"></ListView>
					
				<!-- Events tab -->
				<ListView android:id="@+id/events_list_view"
					android:background="#fff"
					android:divider="#d9d7d7"
					android:layout_width="fill_parent" android:layout_height="fill_parent"></ListView>
					
				<!-- Top Listeners tab -->
				<ListView android:id="@+id/listeners_list_view"
					android:background="#fff"
					android:divider="#d9d7d7"
					android:layout_width="fill_parent" android:layout_height="fill_parent"></ListView>
		
			</ViewFlipper>
		</LinearLayout>
	</ViewFlipper>

</LinearLayout>

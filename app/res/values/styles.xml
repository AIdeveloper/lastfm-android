<resources>
	<style name="PlaybackInfo">
		<item name="android:indeterminateOnly">false</item>
		<item name="android:progressDrawable">@drawable/playback_seekbar
		</item>
		<item name="android:indeterminateDrawable">@drawable/playback_seekbar
		</item>
		<item name="android:minHeight">15dip</item>
		<item name="android:maxHeight">15dip</item>
		<item name="android:thumb">@null</item>
	</style>

	<style name="PlaybackText">
		<item name="android:textColor">#ffffffff</item>
		<item name="android:shadowColor">#ff404040</item>
		<item name="android:shadowRadius">2.0</item>
	</style>

	<style name="LastFMButton">
		<item name="android:background">@+drawable/lastfm_button_transparent_bg48</item>
		<item name="android:layout_width">48px</item>
		<item name="android:layout_height">48px</item>
	</style>

	<style name="LastFMProgressBar">
		<item name="android:indeterminateDuration">3500</item>
		<item name="android:indeterminateBehavior">repeat</item>
		<item name="android:indeterminateOnly">false</item>
		<item name="android:progressDrawable">@+drawable/progress_horizontal
		</item>
		<item name="android:indeterminateDrawable">
			@+drawable/progress_indeterminate_horizontal</item>
		<item name="android:minHeight">10dip</item>
		<item name="android:maxHeight">10dip</item>
		<item name="android:minWidth">48dip</item>
		<item name="android:maxWidth">48dip</item>
	</style>

	<style name="LastFMButton.Love">
		<item name="android:src">@+drawable/icon_love</item>
		<item name="android:layout_width">48dip</item>
		<item name="android:layout_height">48dip</item>
	</style>
	<style name="LastFMButton.Ban">
		<item name="android:src">@+drawable/action_remove</item>
		<item name="android:layout_width">48dip</item>
		<item name="android:layout_height">48dip</item>
	</style>
	
	<style name="LastFMButton.Play">
		<item name="android:src">@+drawable/media_playback_start</item>
		<item name="android:layout_width">48dip</item>
		<item name="android:layout_height">48dip</item>
	</style>
	
	<style name="LastFMButton.Pause">
		<item name="android:src">@+drawable/media_playback_pause</item>
		<item name="android:layout_width">48dip</item>
		<item name="android:layout_height">48dip</item>
	</style>
	
	<style name="LastFMButton.Next">
		<item name="android:src">@+drawable/media_seek_forward</item>
		<item name="android:layout_width">48dip</item>
		<item name="android:layout_height">48dip</item>
	</style>

	<style name="LastFMButton.NewStation">
		<item name="android:background">@+drawable/lastfm_button_bg</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#EEEEEE</item>
		<item name="android:shadowColor">#000000</item>
		<item name="android:shadowRadius">2.5</item>
		<item name="android:shadowDx">0.0</item>
		<item name="android:shadowDy">0.0</item>
	</style>

	<style name="LastFMButton.Logout">
		<item name="android:background">@+drawable/lastfm_button_bg</item>
		<item name="android:textSize">13sp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">#EEEEEE</item>
		<item name="android:layout_height">25dip</item>
	</style>

	<style name="Home">
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:shadowColor">#444444</item>
		<item name="android:shadowRadius">1.5</item>
		<item name="android:shadowDx">0.0</item>
		<item name="android:shadowDy">0.0</item>
	</style>
	<style name="Home.UserName">
		<item name="android:textSize">22sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="Home.NumberPlayed">
		<item name="android:textSize">12sp</item>
		<item name="android:textStyle">normal</item>
	</style>
	
	
	<style name="InfoButton">
		<item name="android:background">@+drawable/lastfm_button_transparent_bg32</item>
		<item name="android:layout_width">32px</item>
		<item name="android:layout_height">32px</item>
	</style>
	
	<style name="LastFMButton.Artist">
		<item name="android:src">@+drawable/artist_info</item>
		<item name="android:layout_width">32dip</item>
		<item name="android:layout_height">32dip</item>
	</style>
	
	<style name="LastFMButton.Album">
		<item name="android:background">@+drawable/lastfm_button_transparent_bg48</item>
		<item name="android:src">@+drawable/album_info</item>
		<item name="android:layout_width">32dip</item>
		<item name="android:layout_height">32dip</item>
	</style>

</resources>

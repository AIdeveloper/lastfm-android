<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="NavBar">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_height">48dip</item>
		<item name="android:layout_marginBottom">8dip</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:background">@+drawable/title_bar</item>
		<item name="android:paddingLeft">7dip</item>
		<item name="android:paddingRight">5dip</item>
	</style>
	<style name="NavBar_Title">
		<item name="android:textColor">#fff</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">8pt</item>
	</style>
	<style name="playback_info">
		<item name="android:textSize">6pt</item>
		<item name="android:textColor">#fff</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="playback_time">
		<item name="android:textSize">6pt</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowColor">#ff000000</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">0</item>
		<item name="android:shadowRadius">3</item>
	</style>
	<style name="LastFMButton">
		<item name="android:background">@+drawable/player_controls_portrait</item>
		<item name="android:layout_width">64dip</item>
		<item name="android:layout_height">76dip</item>
	</style>
	<style name="LastFMButton.Love">
		<item name="android:src">@+drawable/love</item>
	</style>
	<style name="LastFMButton.Ban">
		<item name="android:src">@+drawable/ban</item>
	</style>
	<style name="LastFMButton.Menu">
		<item name="android:src">@+drawable/cog</item>
	</style>
	<style name="LastFMButton.Stop">
		<item name="android:src">@+drawable/stop</item>
	</style>
	<style name="LastFMButton.Skip">
		<item name="android:src">@+drawable/skip</item>
	</style>
</resources>
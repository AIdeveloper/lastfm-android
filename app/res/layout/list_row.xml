<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="horizontal"
	android:minHeight="45px" android:layout_height="wrap_content">
	<ImageView android:id="@+id/radio_row_img"
		android:adjustViewBounds="true" android:layout_height="wrap_content"
		android:layout_width="45px" android:maxHeight="45px" android:maxWidth="45px"
		android:layout_gravity="center_vertical" />
	<TextView android:id="@+id/radio_row_name"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_vertical" android:textSize="20sp"
		android:layout_marginLeft="10px"></TextView>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="45px" android:orientation="horizontal"
		android:gravity="right|center_vertical">
		<ViewSwitcher android:id="@+id/row_view_switcher"
			android:visibility="invisible" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<ImageView android:adjustViewBounds="true"
				android:layout_height="wrap_content" android:layout_width="45px"
				android:maxHeight="45px" android:maxWidth="45px" android:src="@drawable/arrow"></ImageView>
			<ProgressBar android:layout_width="32px"
				android:layout_height="32px" android:indeterminate="true"
				android:layout_gravity="center_vertical|center_horizontal"></ProgressBar>
		</ViewSwitcher>
	</LinearLayout>
</LinearLayout>
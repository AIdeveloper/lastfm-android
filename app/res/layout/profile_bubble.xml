<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent" 
	android:layout_height="70dip" xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:gravity="center_vertical" android:layout_margin="5dip"
	xmlns:lfm="http://schemas.android.com/apk/res/fm.last.android" android:layout_marginBottom="10dip">
	<fm.last.android.RemoteImageView android:id="@+id/profile_avatar"
		lfm:unknownImage="@drawable/profile_unknown" android:layout_height="64dip"
		android:layout_margin="2dip" android:layout_width="64dip" 
		android:paddingRight="10dip"/>
	<LinearLayout android:layout_width="wrap_content" android:paddingLeft="5dip"
		android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:gravity="center_vertical">

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/profile_username" android:color="#ffffff"
			android:textStyle="bold" />

		<TextView android:layout_width="wrap_content" android:color="#cccccc"
			android:layout_height="wrap_content" android:id="@+id/profile_geo" />
		<TextView android:layout_width="wrap_content" android:color="#cccccc"
			android:layout_height="wrap_content" android:id="@+id/profile_plays"/>
	</LinearLayout>
</LinearLayout>

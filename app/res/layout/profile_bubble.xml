<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:lfm="http://schemas.android.com/apk/res/fm.last.android" 
	android:layout_height="64px" 
	android:layout_width="fill_parent"
	android:orientation="horizontal"
	android:gravity="top"
	android:paddingTop="12px"
	android:paddingBottom="6px"
	android:paddingRight="11px">
	<fm.last.android.RemoteImageView android:id="@+id/profile_avatar"
		lfm:unknownImage="@drawable/profile_unknown"
		android:background="@drawable/profile_unknown" 
		android:layout_height="44px"
		android:layout_width="44px"
		android:layout_marginLeft="12px"
		android:layout_marginRight="12px"
		android:scaleType="centerCrop"
		android:paddingRight="10dip"/>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:orientation="vertical"
		android:gravity="center_vertical"
		xmlns:android="http://schemas.android.com/apk/res/android">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/profile_username" android:color="#ffffff"
			android:textStyle="bold" />
		<TextView android:layout_width="wrap_content" android:color="#cccccc"
			android:layout_height="wrap_content" android:id="@+id/profile_meta" />
	</LinearLayout>
</LinearLayout>

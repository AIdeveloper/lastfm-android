<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="#000">

	
	<ViewFlipper android:id="@+id/playback_detail_flipper"
		android:layout_width="fill_parent" android:layout_height="fill_parent">

		<!-- Playback view -->
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			xmlns:lfm="http://schemas.android.com/apk/res/fm.last.android">

			<fm.last.android.RemoteImageView
				android:id="@+id/album" lfm:unknownImage="@+drawable/albumart_mp_unknown"
				android:background="@drawable/albumart_mp_unknown" android:gravity="center"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true" android:layout_height="300dip" android:layout_width="300dip"/>

			<ImageButton android:id="@+id/ontour" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:layout_alignParentTop="true" 
				android:layout_alignParentRight="true" android:visibility="gone" 
				android:src="@drawable/on_tour" android:background="@null"/>

			<LinearLayout android:id="@+id/playback_controls"
				android:orientation="horizontal" android:layout_gravity="bottom"
				android:layout_marginTop="1px" android:layout_height="76px"
				android:layout_width="fill_parent" android:gravity="center"
				android:layout_alignParentBottom="true">

				<ImageButton android:id="@+id/love" style="@+style/LastFMButton.Love" />
				<ImageButton android:id="@+id/ban" style="@+style/LastFMButton.Ban" />
				<ImageButton android:id="@+id/stop" style="@+style/LastFMButton.Stop" />
				<ImageButton android:id="@+id/skip" style="@+style/LastFMButton.Skip" />

			</LinearLayout>

			<TableLayout android:id="@+id/track_metadata"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:layout_centerHorizontal="true"
				android:layout_above="@id/playback_controls" android:layout_marginBottom="8dip" android:gravity="center">

				<TableRow android:layout_height="wrap_content"
					android:layout_width="fill_parent" android:layout_gravity="center"
					android:gravity="center">

					<TextView android:id="@+id/track_artist" style="@style/playback_info"
						android:layout_height="wrap_content" android:layout_width="fill_parent"
						android:layout_gravity="center" android:gravity="center" android:text="Artist" android:maxWidth="300dip"/>
				</TableRow>

				<TableRow android:layout_height="wrap_content"
					android:layout_width="fill_parent" android:gravity="center">

					<TextView android:id="@+id/track_title" style="@style/playback_info"
						android:layout_height="wrap_content" android:layout_width="fill_parent"
						android:layout_gravity="center" android:gravity="center" android:text="Track Title" android:maxWidth="300dip"/>
				</TableRow>

				<TableRow android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:gravity="center">

					<LinearLayout android:layout_width="fill_parent"
						android:layout_height="wrap_content">

						<TextView android:id="@+id/currenttime" style="@style/playback_time"
							android:layout_gravity="bottom" android:paddingLeft="5dip"
							android:layout_height="wrap_content" android:layout_width="48dip"
							android:gravity="right" android:maxWidth="48dip" android:width="48dip" android:text="--:--"/>

						<ProgressBar android:id="@android:id/progress"
							android:background="#000" android:layout_height="8px"
							android:paddingLeft="5px" android:paddingRight="5px"
							android:indeterminateOnly="false" android:progressDrawable="@+drawable/progress_horizontal"
							android:layout_width="200dip" android:layout_marginLeft="8dip"
							android:layout_marginRight="8dip" android:layout_gravity="center_vertical" />

						<TextView android:id="@+id/totaltime" style="@style/playback_time"
							android:layout_gravity="bottom" android:paddingLeft="5dip"
							android:layout_height="wrap_content" android:layout_width="48dip"
							android:gravity="left" android:maxWidth="48dip" android:width="48dip" android:text="--:--"/>

					</LinearLayout>
				</TableRow>
			</TableLayout>
		</RelativeLayout>

		<!--  metadata view -->
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			<fm.last.android.widget.TabBar
				android:id="@+id/TabBar" android:layout_width="fill_parent"
				android:layout_height="60dip" android:layout_marginTop="6dip" />
			<LinearLayout android:background="@drawable/tab_bar_rest"
				android:layout_width="fill_parent" android:layout_height="5dip"
				android:layout_marginBottom="1dip" />
			<ViewFlipper android:id="@+id/ViewFlipper"
				android:layout_width="fill_parent" android:layout_height="fill_parent">

				<!-- Bio tab -->
				<WebView android:id="@+id/webview" android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:fadingEdge="none">
				</WebView>

				<!-- Similar tab -->
				<ListView android:id="@+id/similar_list_view"
					android:background="#fff" android:divider="#d9d7d7"
					android:listSelector="#00000000" android:layout_width="fill_parent"
					android:layout_height="fill_parent"></ListView>

				<!-- Top Tags tab -->
				<ListView android:id="@+id/tags_list_view"
					android:background="#fff" android:divider="#d9d7d7"
					android:listSelector="#00000000" android:layout_width="fill_parent"
					android:layout_height="fill_parent"></ListView>

				<!-- Events tab -->
				<ListView android:id="@+id/events_list_view"
					android:background="#fff" android:divider="#d9d7d7"
					android:listSelector="#00000000" android:layout_width="fill_parent"
					android:layout_height="fill_parent"></ListView>

				<!-- Top Listeners tab -->
				<ListView android:id="@+id/listeners_list_view"
					android:background="#fff" android:divider="#d9d7d7"
					android:listSelector="#00000000" android:layout_width="fill_parent"
					android:layout_height="fill_parent"></ListView>

			</ViewFlipper>
		</LinearLayout>
	</ViewFlipper>

</LinearLayout>

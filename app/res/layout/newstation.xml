<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/station_layout"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<fm.last.android.widget.TabBar
		android:id="@+id/TabBar" android:layout_width="fill_parent"
		android:layout_height="48dip" android:layout_marginTop="4dip" />
	<LinearLayout android:id="@+id/SearchBar" 
		android:background="@drawable/tab_bar_rest"
		android:layout_width="fill_parent"
		android:layout_below="@+id/TabBar"
		android:layout_height="wrap_content" android:paddingTop="4dip">
	<EditText android:id="@+id/station_editbox"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:textSize="18sp"
		android:layout_alignParentLeft="true"  android:layout_alignLeft="@+id/station_search"
		android:layout_weight="1" android:singleLine="true" />	
	<Button android:id="@+id/search"
		android:text="@string/search"
		android:textColor="#fff" android:gravity="center"
		android:layout_height="36dip" android:layout_width="56dip"
		android:layout_marginLeft="4dip"
		android:layout_marginRight="4dip"
		android:background="@drawable/logout_button"/>
	</LinearLayout>
	<TextView android:id="@+id/search_hint" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:layout_height="fill_parent" android:gravity="center" android:text="@string/newstation_hint_artist" android:layout_width="280dip" android:textSize="8pt" android:textStyle="bold" android:layout_below="@id/SearchBar"></TextView>
	<ListView android:id="@android:id/list" android:layout_width="fill_parent"
		android:layout_below="@+id/SearchBar"
		android:divider="#d9d7d7"
		android:listSelector="#00000000"
		android:visibility="gone"
		android:layout_height="fill_parent">
	</ListView>
</RelativeLayout>

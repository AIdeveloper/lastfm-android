<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/station_layout"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/frame">
	<RadioGroup android:id="@+id/station_typegroup"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
		android:orientation="horizontal" android:gravity="center">

		<RadioButton android:id="@+id/station_type_artist"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/newstation_artist" android:paddingRight="10px">
		</RadioButton>

		<RadioButton android:id="@+id/station_type_tag"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/newstation_tag" android:paddingRight="10px">
		</RadioButton>

		<RadioButton android:id="@+id/station_type_user"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/newstation_user">
		</RadioButton>

	</RadioGroup>
	<EditText android:id="@+id/station_editbox"
		android:layout_height="wrap_content" 
		android:textSize="18sp" android:layout_below="@+id/station_typegroup"
		android:layout_alignParentLeft="true"  android:layout_alignLeft="@+id/station_search"
		android:layout_width="fill_parent" android:singleLine="true" />	

	<ListView android:id="@+id/station_list" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_below="@+id/station_editbox"
		android:layout_alignParentLeft="true" />

</RelativeLayout>

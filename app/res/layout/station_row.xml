<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="horizontal" android:id="@+id/station_row" android:background="@drawable/list_item_rest">
	<TextView android:id="@+id/label" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="Black Eyed Peas"
			android:layout_weight="1" android:paddingLeft="16dip"  
			android:layout_gravity="center" android:gravity="left" android:textSize="16dip" android:textStyle="bold" android:textColor="#000">
		</TextView>
	<ImageView android:id="@+id/icon" android:paddingLeft="16dip" android:paddingRight="16dip"
		android:src="@drawable/list_radio_icon_rest"
		android:layout_width="wrap_content" android:layout_gravity="center"
		android:layout_height="wrap_content"/>
</LinearLayout>
